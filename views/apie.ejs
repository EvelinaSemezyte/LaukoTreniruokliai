          <div class="email-form-label">
            <label class="small-heading" for="">El. paštas:</label>
          </div>
          <div class="email-form-input">
            <input type="text" name="email" value="<%= typeof email != 'undefined' ? email : '' %>">
          </div>
        </div>
        <div class="email-form-section">
          <div class="email-form-label">
            <label class="small-heading" for="">Tema:</label>
          </div>
          <div class="email-form-input">
            <input type="text" name="subject" value="<%= typeof subject != 'undefined' ? subject : '' %>">
          </div>
        </div>
        <div class="email-form-section">
          <div class="email-form-label">
            <label class="small-heading" for="">Žinutė:</label>
          </div>
          <div class="email-form-input">
            <textarea name="message" rows="10"> <%= typeof message != 'undefined' ? message : '' %> </textarea>
          </div>
        </div>
        <div class="email-form-button">
          <%- include("partials/messages") -%>
          <button class="main-button" type="submit">Siųsti</button>
        </div>
